# Основные настройки
DEBUG=false
# КРИТИЧНО: Сгенерируйте надежный SECRET_KEY для продакшена!
# Используйте: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-random-32-char-secret-key-for-production

# API и CORS настройки
# Разрешенные хосты для CORS (разделенные запятыми)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# База данных
DATABASE_URL=postgresql://user:password@localhost:5432/ai_support
REDIS_URL=redis://localhost:6379/0

# AI сервисы
OPENAI_API_KEY=sk-your-openai-api-key
YANDEX_GPT_API_KEY=your-yandex-gpt-key
YANDEX_CLOUD_FOLDER_ID=your-folder-id

# Yandex Alice
ALICE_SKILL_ID=your-alice-skill-id
ALICE_OAUTH_TOKEN=your-alice-oauth-token

# E-commerce интеграции
WILDBERRIES_API_KEY=your-wb-api-key
OZON_API_KEY=your-ozon-api-key
BITRIX_WEBHOOK_URL=https://your-domain.bitrix24.ru/rest/webhook-url

# Платежи
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# Мессенджеры
TELEGRAM_BOT_TOKEN=your-bot-token
VK_ACCESS_TOKEN=your-vk-token
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token

# Логирование
LOG_LEVEL=INFO